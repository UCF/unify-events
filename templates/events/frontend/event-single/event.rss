<item>
	<title>{% if event_instance.event.canceled %}CANCELED: {% endif %}{{ event_instance.title }}</title>
	<link>http://{{ request.get_host }}{{ event_instance.get_absolute_url }}</link>
	<description><![CDATA[{{ event_instance.event.description|escape }}]]></description>
	<pubDate>{{ event_instance.start|date:"r" }}</pubDate>
	<guid>http://{{ request.get_host }}{{ event_instance.get_absolute_url }}</guid>
	<ucfevent:type>{% if event_instance.event.has_instances %}ongoing{% else %}day{% endif %}</ucfevent:type>
	<ucfevent:startdate>{{ event_instance.start|date:"r" }}</ucfevent:startdate>
	<ucfevent:enddate>{{ event_instance.end|date:"r" }}</ucfevent:enddate>
	<ucfevent:location>
		<ucfevent:name><![CDATA[{{ event_instance.location.title }}]]></ucfevent:name>
		<ucfevent:mapurl><![CDATA[{{ event_instance.location.url }}]]></ucfevent:mapurl>
	</ucfevent:location>
</item>
